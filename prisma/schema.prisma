// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  uuid    String   @id @default(uuid())
  name    String
  scraps  Scrap[]
}

model Scrap {
  uuid      String   @id @default(uuid())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Selector {
  uuid      String   @id @default(uuid())
  name      String
  selector  String
  isChecked Boolean
  scrapUuid String
  scrap     Scrap    @relation(fields: [scrapUuid], references: [uuid])
}