// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  id      Int      @id @default(autoincrement())
  name    String
  uuid    String   @unique
  scraps  Scrap[]
}

model Scrap {
  id          Int      @id @default(autoincrement())
  name        String
  uuid        String   @unique
  url         String
  selector    String
  value       String
  isChecked   Boolean
  groupId     Int
  group       Group    @relation(fields: [groupId], references: [id])
}